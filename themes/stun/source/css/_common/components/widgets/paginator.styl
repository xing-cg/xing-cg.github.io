.paginator {
  margin-top: 1rem;
  text-align: center;

  // ------------------------------
  // Pagination for Home/Archives
  // ------------------------------
  &-inner {
    border-radius: 5px;
    padding: 12px 0;
    background-color: var(--color-gray-150);
    overflow-x: auto;    // 允许横向滚动
    white-space: nowrap; // 禁止内容换行
    scrollbar-width: none; // 隐藏滚动条（Firefox）
    
    &::-webkit-scrollbar {
      display: none;    // 隐藏滚动条（Webkit浏览器）
    }
  }

  .page-number,
  .prev,
  .next,
  .extend {
    display: inline-flex; // 改为行内弹性布局
    justify-content: center;
    align-items: center;
    min-width: 36px;      // 为三位数预留足够宽度
    height: 1.7rem;       // 增加高度适应三位数
    flex-shrink: 0;       // 禁止元素收缩
    box-sizing: border-box;
    margin: 0 .5em;
    border: 1px solid transparent;
    border-radius: 3px;
    line-height: 1.5rem;
    text-align: center;
    vertical-align: middle;
    transition: border .2s ease;

    &:hover {
      border-color: var(--color-gray-260);
    }
  }

  .current {
    color: $pagination-item-active-color;
    background-color: $pagination-item-active-bg-color;
    min-width: auto;     // 当前页保持自适应
    padding: 0 8px;      // 增加内边距

    &:hover {
      border-color: transparent;
    }
  }

  // -------------------------
  // Pagination for Articles
  // -------------------------
  // ... 保持原有样式不变

  // 移动端适配
  @media (max-width: 768px) {
    .page-number:not(.current),
    .space {
      display: none;
    }
    
    .prev, .next {
      min-width: 45px;
    }
  }
}